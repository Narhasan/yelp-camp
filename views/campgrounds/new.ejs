<% include ../partials/header %>

<div class="container">
<h1>New Campground Form</h1>

<form action="/campgrounds"  method="POST">
    <div class="form-group"><input class="form-control" type="text" name="name" placeholder="Camp Name"></div>
    <div class="form-group"><input class="form-control" type="number" name="price" placeholder="Price" min="0.00" step="1.00"></div>
    <div class="form-group"><input class="form-control" type="text" name="image" placeholder="Link to Camp Image"></div>
    <div class="form-group"><input class="form-control" type="text" name="description" placeholder="Description"</div>
    <div class="form-group"><input class="btn btn-large btn-default" type="submit"></div>
    
</form>

</div>

